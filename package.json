{
  "name": "badminton-court-manager",
  "private": true,
  "version": "0.0.0",
  "description": "📸 Snap, 🎲 Shuffle, 🏸 Play! The badminton organizer app that turns chaos into fair, fun matches. Upload your player list photo or add them manually to get perfectly balanced teams in seconds.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 10",
    "lint:fix": "eslint . --report-unused-disable-directives --max-warnings 10 --fix",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "remove-comments": "node script/remove_comments.cjs"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@techstark/opencv-js": "^4.11.0-release.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "esbuild": "0.25.5"
  }
}
